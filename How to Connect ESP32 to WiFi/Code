#include<WiFi.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27,16,2);


const char*  ssid = "Wokwi-GUEST";
const char*  password = "";

int redpin=19;
int blue = 18;


void setup() {
  lcd.init();
  lcd.backlight();
  pinMode(19, OUTPUT);
  pinMode(18, OUTPUT);
  digitalWrite(19, LOW);
  digitalWrite(18, LOW);
  lcd.setCursor(0,0);
  lcd.print("Connecting");


  
}

void loop() {

  WiFi.begin(ssid,password);

  while(WiFi.status() != WL_CONNECTED){

    digitalWrite(19, HIGH);
    delay(500);
  digitalWrite(18, LOW);
  delay(500);
  lcd.setCursor(0,0);
  lcd.print("Connecting....");
  }
  digitalWrite(18,0);
  digitalWrite(19,1);

  lcd.clear();

  lcd.setCursor(0,0);
  lcd.print("Connected");

  lcd.setCursor(0,1);
  lcd.print(WiFi.localIP());

  
}
