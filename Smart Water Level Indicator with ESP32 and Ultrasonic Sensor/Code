#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(0x27,16,2);
int TrigPin = 12;
int EchoPin = 13;
int led1 = 15;
int led2 = 2;
int led3 = 4;
int led4 = 16;
int led5 = 17;
int buzzer = 14; 

void setup() {
  pinMode(TrigPin, OUTPUT);
  pinMode(EchoPin, INPUT);
  pinMode(led1, OUTPUT);
  pinMode(led2, OUTPUT);
  pinMode(led3, OUTPUT);
  pinMode(led4, OUTPUT);
  pinMode(led5, OUTPUT);
  pinMode(buzzer, OUTPUT);
  lcd.init();
  lcd.backlight();
}

void loop() {
  digitalWrite(TrigPin, LOW);
  delayMicroseconds(2);
  digitalWrite(TrigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(TrigPin, LOW);
  long duration = pulseIn(EchoPin,HIGH);
  int distance = (duration*0.0343)/2;

  if(distance<10){
    digitalWrite(led5, HIGH);
    digitalWrite(buzzer, HIGH);
    digitalWrite(led4, LOW);
    digitalWrite(led3, LOW);
    digitalWrite(led2, LOW);
    digitalWrite(led1, LOW);

    lcd.clear();
    lcd.setCursor(0,0);
    lcd.print("WaterLevel ");
    lcd.setCursor(12,0);
    lcd.print(distance);

  }

  else if(distance<30){
    digitalWrite(led5, HIGH);
    digitalWrite(buzzer, LOW);
    digitalWrite(led4, HIGH);
    digitalWrite(led3, LOW);
    digitalWrite(led2, LOW);
    digitalWrite(led1, LOW);

    lcd.clear();
    lcd.setCursor(0,0);
    lcd.print("WaterLevel ");
    lcd.setCursor(12,0);
    lcd.print(distance);

  }
   else if(distance<50){
    digitalWrite(led5, HIGH);
    digitalWrite(buzzer, LOW);
    digitalWrite(led4, HIGH);
    digitalWrite(led3, HIGH);
    digitalWrite(led2, LOW);
    digitalWrite(led1, LOW);

    lcd.clear();
    lcd.setCursor(0,0);
    lcd.print("WaterLevel ");
    lcd.setCursor(12,0);
    lcd.print(distance);

  }
   else {
    digitalWrite(led5, HIGH);
    digitalWrite(buzzer, HIGH);
    digitalWrite(led4, HIGH);
    digitalWrite(led3, HIGH);
    digitalWrite(led2, HIGH);
    digitalWrite(led1, HIGH);

    lcd.clear();
    lcd.setCursor(0,0);
    lcd.print("WaterLevel ");
    lcd.setCursor(12,0);
    lcd.print(distance);

  }
  delay(1000);



}
