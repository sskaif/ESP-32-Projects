#include <ESP32Servo.h>
#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(0x27,16,2);
#define PIRpin 13
#define servoPin 19

Servo myservo;




void setup() {
  pinMode(PIRpin, INPUT);
  pinMode(servoPin, OUTPUT);
  myservo.attach(19);
  myservo.write(0);
  lcd.init();
  lcd.backlight();

}

void loop() {

  int PIRvalue = digitalRead(PIRpin);

  if(PIRvalue==1){
    lcd.clear();
    lcd.setCursor(0,0);
    lcd.print("PIR Value ");
    lcd.setCursor(12,0);
    lcd.print(PIRvalue);
    lcd.setCursor(0,1);
    lcd.print("SERVO ON 180");
    myservo.write(180);
  }
  else{
    myservo.write(0);
     lcd.clear();
    lcd.setCursor(0,0);
    lcd.print("PIR Value ");
    lcd.setCursor(12,0);
    lcd.print(PIRvalue);
    lcd.setCursor(0,1);
    lcd.print("SERVO OFF 0");
  }
  delay(500);

}
